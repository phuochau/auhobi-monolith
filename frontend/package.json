{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "add-component": "npx shadcn-ui@latest add",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "codegen": "yarn gql-models-codegen && yarn gql-fragments-gen",
    "gql-models-codegen": "graphql-codegen --config ./gql-schema-codegen.ts",
    "gql-fragments-gen": "node ../devops/scripts/gql-generator/gen-fragments.js  --schema-path=../backend/src/schema.gql --out-dir=./src/graphql/gql/fragments --depth=3",
    "gql-query-gen": "node ../devops/scripts/gql-generator/gen-operation.js --schema-path=../backend/src/schema.gql --depth=3 --type=query --out-dir=./src/graphql/gql/queries",
    "gql-mutation-gen": "node ../devops/scripts/gql-generator/gen-operation.js --schema-path=../backend/src/schema.gql --depth=3 --type=mutation --out-dir=./src/graphql/gql/mutations",
    "gql-subscription-gen": "node ../devops/scripts/gql-generator/gen-operation.js --schema-path=../backend/src/schema.gql --depth=3 --type=subscription --out-dir=./src/graphql/gql/subscriptions"
  },
  "dependencies": {
    "@apollo/client": "^3.11.4",
    "@apollo/experimental-nextjs-app-support": "^0.11.2",
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@tailwindcss/forms": "^0.5.7",
    "axios": "^1.7.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cookie": "^0.6.0",
    "graphql": "^16.9.0",
    "iron-session": "^8.0.3",
    "lodash": "^4.17.21",
    "lucide-react": "^0.428.0",
    "next": "14.2.5",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.53.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-resolvers": "^4.2.1",
    "@types/cookie": "^0.6.0",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
